@using RecipeApp.Core.ViewModels.AddViewModel;
@using System.Security.Claims;

@{
    ViewData["Title"] = "Save";
}

@model RecipeAddViewModel
 <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Recipe">
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" />
            </div>
            <div class="form-group">
                <label asp-for="Name">Yemek Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Tarifi</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description"></span>

            </div>
            <div class="form-group">
                <label asp-for="Ingredients">Malzemeler</label>
                <input asp-for="Ingredients" class="form-control" />
                <span asp-validation-for="Ingredients"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Image">Fotoğraf</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image"></span>
            </div>
           

            <div class="form-group">
                <label asp-for="CategoryId">Kategoriler</label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control">
                    <option value="">Bir kategori seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>

        <div class="col-sm-9 text-secondary mt-2 ">
            <input type="submit" class="btn  px-4 gradient-custom-3" value="Kaydet">
        </div>
        </form>

    </div>