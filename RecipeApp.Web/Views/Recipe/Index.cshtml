@using RecipeApp.Core.Models;

@{
    ViewData["Title"] = "Index";
}
@model List<Recipe>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
         
         

            <td>CreatedDate</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
              
                <td>@item.CreatedDate</td>
                <td><a class=" btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class=" btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>
</table>

