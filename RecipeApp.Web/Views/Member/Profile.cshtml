@using System.Security.Claims;



@{
    ViewData["Title"] = "Profile";
}
@model UserProfileViewModel


@if (User.Identity.IsAuthenticated && Model != null)
{
<div class="container">
	<div class="main-body">
		<div class="row">
			<form asp-controller="Member" asp-action="Profile" method="post">
					@if (TempData["SuccessMessage"] != null)
					{
						<div class="alert alert-success" role="alert">
							@TempData["SuccessMessage"]
						</div>
					}
					<input type="hidden" asp-for="Id" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" />
					<div class="col-lg-4">

						<div class="card">
							<div class="card-body">
								<div class="d-flex flex-column align-items-center text-center">
									<img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
									<div class="mt-3">
										<h4>@Model.FullName</h4>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-8">
						<div class="card">
							<div class="card-body">
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Ad-Soyad</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="FullName" class="form-control" value=@Model.FullName>
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Kullanıcı Adı</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="UserName" class="form-control" value=@Model.UserName />
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Eposta</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input class="form-control" asp-for="Email" value=@Model.Email />
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Telefon Numarası</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Phone" class="form-control" value=@Model.Phone>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-3"></div>
									<div class="col-sm-9 text-secondary ">
										<input type="submit" class="btn  px-4 gradient-custom-3" value="Güncelle">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-3"></div>
									<div class="col-sm-9 text-secondary mx-2 ">
										<a class="btn  px-4 gradient-custom-3" asp-controller="Member" asp-action="Delete" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value">Hesabı Sil</a>
									</div>
								</div>
							</div>
						</div>

					</div>
			</form>
			
		</div>
	</div>
</div>

}


